<h1 id='title'>Exhibit</h1>

<div id='info'>

    <table id='table'>
        <thead>
            <tr id='head'>
                <th id='id_name'>exid</th>
                <th>name</th>
                <th>biome</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody id='tbody'>
            {{#each results}}
            <tr>
                <td>{{this.exid}}</td>
                <td>{{this.name}}</td>
                <td>{{this.biome}}</td>
                <td class='button'><button class='detail_button'>Details</button></td>
                <td class='button'><button class='update_button'>Update</button></td>
                <td class='button'><button class='delete_button'>Delete</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <div id='enrichment_table'></div>
    <div id='employee_table'></div>

    <h3 id='message'></h3>

    <h2 id='insert_message'>Insert into Exhibit</h2>

    <div id='insert_div'>
        <table id='insert_table'>
            <thead>
                <tr>
                    <th><label for='name'>NAME</label></th>
                    <th><label for='biome'>BIOME</label></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <form>
                    <tr>
                        <td><input type='text' id='name_insert'></td>
                        <td>
                            <select id='biome_insert'>
                                <option value='Rainforest'>Rainforest</option>
                                <option value='Arctic'>Arctic</option>
                                <option value='Savannah'>Savannah</option>
                                <option value='Wetland'>Wetland</option>
                                <option value='Grassland'>Grassland</option>
                                <option value='Desert'>Desert</option>
                                <option value='Forest'>Forest</option>
                                <option value='Climate Controlled'>Climate Controlled</option>
                            </select>
                        </td>
                        <td><input type='submit' id='exhibit_insert'></td>
                    </tr>
                </form>
            </tbody>
        </table>
    </div>

</div>

<script src='js/delete.js'></script>

<script src='js/exhibit.js'></script>