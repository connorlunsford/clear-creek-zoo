<h1 id='title'>Animal</h1>

<input type="checkbox" id="show_names">
<label for='radio' id='show_label'>Show names instead of ID?</label>
<br>

<div id='info'>

    <table id='table'>
        <thead>
            <tr id='head'>
                <th id='id_name'>aid</th>
                <th id='sid_name'>sid</th>
                <th id='exid_name'>exid</th>
                <th>name</th>
                <th>sex</th>
                <th>age</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody id='tbody'>
            {{#each results}}
            <tr>
                <td>{{this.aid}}</td>
                <td>{{this.sid}}</td>
                <td>{{this.exid}}</td>
                <td>{{this.name}}</td>
                <td>{{this.sex}}</td>
                <td>{{this.age}}</td>
                <td class='button'><button class='update_button'>Update</button></td>
                <td class='button'><button class='delete_button'>Delete</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <h3 id='message'></h3>

    <h2>Insert into Animal</h2>

    <table>
            <thead>
                <tr>
                    <th><label for='sid'>SID</label></th>
                    <th><label for='exid'>EXID</label></th>
                    <th><label for='name'>NAME</label></th>
                    <th><label for='sex'>SEX</label></th>
                    <th><label for='age'>AGE</label></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <form>
                    <tr>
                        <td><input type='number' id='sid_insert'></td>
                        <td><input type='number' id='exid_insert'></td>
                        <td><input type='text' id='name_insert'></td>
                        <td><select id='sex_insert'>
                            <option value='Male'>Male</option>
                            <option value='Female'>Female</option>
                        </td>
                        <td><input type='number' id='age_insert'></td>
                        <td><input type='submit' id='animal_insert'></td>
                    </tr>
                </form>
            </tbody>
    </table>

</div>

<script src='js/animal.js'></script>
<script src='js/delete.js'></script>